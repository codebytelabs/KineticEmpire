# Kinetic Empire Unified Trading System Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# EXCHANGE API CONFIGURATION
# =============================================================================
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here
BINANCE_TESTNET=true

# =============================================================================
# ENGINE TOGGLES
# =============================================================================
# Enable/disable trading engines (also controlled in config.py)
SPOT_ENABLED=true
FUTURES_ENABLED=true

# =============================================================================
# TELEGRAM NOTIFICATIONS
# =============================================================================
TELEGRAM_ENABLED=false
TELEGRAM_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///data/trades.db

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# LEGACY SETTINGS (for run_bot.py compatibility)
# =============================================================================
MAX_POSITIONS=20
RISK_PER_TRADE_PCT=0.01
CIRCUIT_BREAKER_PCT=0.05
EMA_SHORT=9
EMA_LONG=21
STOP_LOSS_ATR_MULT=2.0
TAKE_PROFIT_ATR_MULT=4.0
USE_DYNAMIC_WATCHLIST=true
SCANNER_WATCHLIST_SIZE=30
SCANNER_MIN_SCORE=70.0
SCANNER_INTERVAL_HOURS=1
TRAILING_STOPS_ENABLED=true
TRAILING_STOPS_ACTIVATION_THRESHOLD=2.5
TRAILING_STOPS_ATR_MULTIPLIER=1.5
